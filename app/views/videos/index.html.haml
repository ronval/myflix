%article.video_category
  
  
  -@categories.each do |category|
    %header
      %h1= link_to "#{category.category}",  category.category
    .videos.row 
      .video.col-sm-2
      -category.recent_videos.each do |cat|
        
        = link_to video_path(cat), :data=>{:movie =>"#{cat.title}"} do
          %img{:src=>"#{cat.small_cover}"}




